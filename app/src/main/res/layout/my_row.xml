<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/contactos_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/contactos_nombre_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="nombre 1"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/contactos_id_txt"
                app:layout_constraintTop_toTopOf="@+id/contactos_id_txt" />

            <TextView
                android:id="@+id/contactos_apellidos_txt"
                android:layout_width="104dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Apellidos 1"
                app:layout_constraintStart_toStartOf="@+id/contactos_nombre_txt"
                app:layout_constraintTop_toBottomOf="@+id/contactos_nombre_txt" />

            <TextView
                android:id="@+id/contactos_telefono_txt"
                android:layout_width="91dp"
                android:layout_height="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="telefono 1"
                app:layout_constraintStart_toEndOf="@+id/contactos_apellidos_txt"
                app:layout_constraintTop_toTopOf="@+id/contactos_apellidos_txt" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:text="Eliminar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>